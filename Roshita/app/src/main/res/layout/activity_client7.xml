<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohamed.roshita.Client7Activity"
    android:background="@color/brown"
    android:orientation="vertical"
    android:layoutDirection="rtl">

    <include
        layout="@layout/main_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/logo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="صيـدلية :"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/pharm_Name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/t4"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="الهاتـف :"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/pharm_Phone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/t5"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="توصيل للمنازل :"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/pharmDelivery"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/t7"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="الخريطـة :"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/pharm_Map"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="إضـغط هنا"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/t6"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="العـنوان :"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/pharm_Addr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <Button
                android:id="@+id/msgBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="إرسال رسـالة"
                android:background="@color/white"
                android:textColor="@color/brown"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>