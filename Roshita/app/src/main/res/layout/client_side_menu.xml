<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_gravity="start"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/medSrchPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="بحـث عـن دواء"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:textSize="15sp"
            android:background="@color/white"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/phrmSrchPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="بحـث عـن صـيدلـية"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:textSize="15sp"
            android:background="@color/white"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/medOrdPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="طـلـب دواء"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:textSize="15sp"
            android:background="@color/white"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/myOrdersPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="طـلباتي"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:textSize="15sp"
            android:background="@color/white"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/messagePage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الرسـائل"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:textSize="15sp"
            android:background="@color/white"/>
    </LinearLayout>
</ScrollView>