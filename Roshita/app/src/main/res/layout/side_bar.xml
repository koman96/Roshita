<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <Button
            android:id="@+id/mainBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الرئيسيـة"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:textSize="17sp"
            android:background="@color/white"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/addMed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="إضافـة دواء"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:textSize="17sp"
            android:background="@color/white"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/editMed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تعـديـل دواء"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:textSize="17sp"
            android:background="@color/white"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/editData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="بيانات الصيدلـيـة"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:textSize="17sp"
            android:background="@color/white"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/ordersPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="طلبات الأدوية"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:textSize="17sp"
            android:background="@color/white"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/messagePage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الرسـائـل"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:textSize="17sp"
            android:background="@color/white" />

        <Button
            android:id="@+id/deleteAccPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="حذف الحساب"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:textSize="17sp"
            android:background="@color/white"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>